@model IEnumerable<MatzesMusicShop.ViewModels.CommentViewModel>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/Comment.css" rel="stylesheet" />


@foreach (var item in Model)
{
    <hr />
    <h4 class="Title">@Html.DisplayFor(modelItem => item.Title)</h4>
    <hr />
    <p>
        <div class="rating">
            @for (int i = 0; i < 5; i++)
            {
                if (item.Rating > i)
                {
                    <i class="fa fa-star"></i>
                }
                else
                {
                    <i class="fa fa-star-o"></i>
                }
            }
        </div>
        <div class="datum">@Html.DisplayFor(modelItem => item.DateTime)</div>
    </p>
    <p>
        @Html.DisplayFor(modelItem => item.Text)
    </p>
}

@model MatzesMusicShop.ViewModels.CommentViewModel

@{
    List <SelectListItem> RatingItems = new List<SelectListItem>()
    {
        new SelectListItem(){
            Text = "5 Sterne", Value = "5"
        },
        new SelectListItem(){
            Text = "4 Sterne", Value = "4"
        },
        new SelectListItem(){
            Text = "3 Sterne", Value = "3"
        },
        new SelectListItem(){
            Text = "2 Sterne", Value = "2"
        },
        new SelectListItem(){
            Text = "1 Sterne", Value = "1"
        }
    };
}
@using (Ajax.BeginForm("CommentForm", "Comments", new AjaxOptions() {
    OnSuccess = "showSuccess"
}))
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Neuer Kommentar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CdID)
        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label"})
            <div>
                @Html.DropDownListFor(model => model.Rating, RatingItems, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}



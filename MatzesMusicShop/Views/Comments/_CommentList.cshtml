@model IEnumerable<MatzesMusicShop.ViewModels.CommentViewModel>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/Comment.css" rel="stylesheet" />

<h4>Kommentare</h4>
@foreach (var item in Model)
{
    <hr />
    <div class="glyphicon glyphicon-user"> Anonym</div>
    <div>
        <span class="rating">
            @for (int i = 0; i < 5; i++)
            {
                if (item.Rating > i)
                {
                    <i class="fa fa-star"></i>
                }
                else
                {
                    <i class="fa fa-star-o"></i>
                }
            }
        </span>
        <span class="title"> @Html.DisplayFor(modelItem => item.Title)</span>
    </div>
    <div class="datum">@Html.DisplayFor(modelItem => item.Date)</div>
    <div class="commentText">@Html.DisplayFor(modelItem => item.Text)</div>
}

